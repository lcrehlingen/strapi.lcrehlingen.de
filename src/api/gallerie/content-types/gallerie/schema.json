{
  "kind": "collectionType",
  "collectionName": "galleries",
  "info": {
    "singularName": "gallerie",
    "pluralName": "galleries",
    "displayName": "Gallerie",
    "name": "gallerie"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "media": {
      "type": "media",
      "allowedTypes": [
        "images"
      ],
      "multiple": true,
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "allowedTypes": [
        "images"
      ],
      "multiple": false,
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "photographers": {
      "type": "component",
      "repeatable": true,
      "component": "author.authors"
    }
  }
}
